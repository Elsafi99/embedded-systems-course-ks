#include <stdio.h>

int main(void) {

	int number=0;

	printf("enter a positive integer: ");
	fflush(stdin);
	fflush(stdout);
	scanf("%d",&number);

	if(number<0){
		printf("error you entered a negative integer\n ");
		printf("enter a positive integer: ");
		fflush(stdin);
		fflush(stdout);
		scanf("%d",&number);
	}



	return 0;
}
