#include <stdio.h>
#include <stdlib.h>

int main(void) {

    float a=0;
    float result=0;

    //get a , b values
	printf(" Enter An Integer You Want To Check= ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&a);
	result=a%2.0;
    if(result>0){
    	printf(" Integer Value:%f is Odd",a);
    }
    else{
	    printf(" Integer Value:%f is Even",a);
    }
	return EXIT_SUCCESS;
}
