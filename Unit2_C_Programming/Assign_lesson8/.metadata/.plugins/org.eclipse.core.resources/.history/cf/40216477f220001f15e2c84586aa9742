#include <stdio.h>

int main(void) {

//declare a wild pointer till now.
	int* ab;
//declare and initialise variable .
	int m=29;
//display the address and the value assigned to variable m.
	printf("Address of m=%x",&m);
	printf("Value of m=%d",m);




