#include <stdio.h>

struct Sdistance{

	float feet;
	float inch;
};

int main(void) {

  struct Sdistance distance1,distance2,result;

  printf("Enter information of 1st distance:");
  //stores the distance 1 feet
  printf("\r\nEnter the feet:");
  fflush(stdin);
  fflush(stdout);
  scanf("%f",&distance1.feet);
  //stores the distance 1 inch
  printf("\r\nEnter the inch:");
  fflush(stdin);
  fflush(stdout);
  scanf("%d",&distance1.inch);

  printf("Enter information of 2nd distance:");
  //stores the distance 2 feet
  printf("\r\nEnter the feet:");
  fflush(stdin);
  fflush(stdout);
  scanf("%f",&distance2.feet);
  //stores the distance 2 inch
  printf("\r\nEnter the inch:");
  fflush(stdin);
  fflush(stdout);
  scanf("%d",&distance2.inch);





  //display student information.
  printf("\r\nDisplaying the information");
  printf("\r\nName:%s",S.name);
  printf("\r\nRoll:%d",S.roll);
  printf("\r\nMarks:%.2f",S.marks);



	return 0;
}


