#include <stdio.h>

//int lenght_str(char stri[]);

int lenght_str(char stri[]){
	int length=0;
	while(stri[length]!='\0'){
		length++;
	}
	return length;
}

int main()
{
    char str[100];
    int length=0;
//enter the string
    printf("\r\nEnter The string: ");
    gets(str);
//get the length of the string.
    length=lenght_str(str);
//print the frequency
	printf("\r\nThe length of the string is %d",length);
    return 0;
}

